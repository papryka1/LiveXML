<h2 class="text-center mt-4">DataTable</h2>
<div>   
    <div class="row justify-content-center">
        <div class="col-sm-9">
            <form action="/datatables/update/<%= datatable._id %>" method="POST">
                <div class="input-group pb-2">
                    <input name="dataTableName" type="text" class="form-control" value="<%= datatable.tableName %>">
                </div>
                <% var valueFieldId = 0 %>
                <% datatable.fields.forEach(field => { %>
                    <div id="row-template">
                        <div class="input-group pb-2">
                            <input type="text" class="form-control" value="<%= field[0] %>" disabled="">
                            <input id="<%= "value" + valueFieldId %>" type="text" class="form-control" value="<%= field[1] %>" placeholder="Value" required>
                            <% if(!isNaN(field[1])) { %>
                                <button type="button" class="btn btn-secondary">-1</button>
                                <button type="button" class="btn btn-secondary">+1</button>
                                <button type="button" class="btn btn-secondary">+3</button>
                                <button type="button" class="btn btn-secondary">+5</button>
                            <% } %>
                        </div>
                    </div>
                    <% valueFieldId++ %> 
                <% }) %> 
            
                <div class="d-flex mb-2">
                    <button type="submit" class="btn btn-success">Submit DataTable</button>
                </div>
                <div class="input-group pb-2">
                    <input name="xmlurl" type="text" class="form-control" value="url" disabled="">
                </div>
            </form>
        </div>  
        <div class="col-sm-3" style="background-color: red;">
            Sharing Table
        </div> 
    </div> 
    <div>
        <form action="/datatables/delete/<%= datatable._id %>" method="POST">
            <button type="submit" class="btn btn-danger">Delete DataTable</button>
        </form>
    </div>
</div>