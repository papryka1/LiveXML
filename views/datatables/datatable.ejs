<h2 class="text-center mt-4">DataTable</h2>
<div>   
    <form action="/datatables/<%= datatable._id %>?_method=PUT" method="POST">
        <div class="input-group pb-2">
            <input name="dataTableName" type="text" class="form-control" value="<%= datatable.tableName %>">
        </div>
        <% var valueFieldId = 0 %>
        <% datatable.fields.forEach(field => { %>
            <div id="row-template">
                <div class="input-group pb-2">
                    <input type="text" class="form-control" value="<%= field[0] %>" disabled="">
                    <input name="<%= "value" + valueFieldId %>" id="<%= "value" + valueFieldId %>" type="text" class="form-control" value="<%= field[1] %>" placeholder="Value" required>
                    <% if(!isNaN(field[1])) { %>
                        <button type="button" class="btn btn-secondary">-1</button>
                        <button type="button" class="btn btn-secondary">+1</button>
                        <button type="button" class="btn btn-secondary">+3</button>
                        <button type="button" class="btn btn-secondary">+5</button>
                    <% } %>
                </div>
            </div>
            <% valueFieldId++ %> 
        <% }) %> 
        
        <div class="d-flex justify-content-center mb-2">
            <button type="submit" class="btn btn-success">Submit DataTable</button>
        </div>
    </form> 
    <div class="input-group pb-2">
        <input type="text" class="form-control" value="XML url" disabled="">
    </div> 
</div> 
<hr />
<div>
    <h3>Share your DataTable</h3>
    <small class="form-text text-muted">Users you share your DataTable with will only be able to modify field values.</small>
    <form action="/datatables/share/<%= datatable._id %>?_method=PUT" method="POST">
        <div class="input-group py-2">
            <input name="shareUserEmail" type="text" class="form-control" placeholder="User email address" required>
            <button type="submit" class="btn btn-primary disabled">Share</button>
        </div>    
    </form>
</div>
<hr />
<div class="d-flex justify-content-end">
    <form method="POST" action="/datatables/<%= datatable._id %>?_method=DELETE" onsubmit="return confirm('Do you really want to delete your DataTable? This CAN NOT be rolledback!')">
        <button type="submit" class="btn btn-danger">Delete DataTable</button>
    </form>
</div>
